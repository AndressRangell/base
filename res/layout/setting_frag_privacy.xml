<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/setting_frag_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_weight="8"
        android:orientation="vertical"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="联网交易或本地演示"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/setting_pri_online"
                    android:checked="false"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_selector"
                    android:layout_width="350dp"
                    android:layout_height="35dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="开启调试或打开日志输出"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/setting_pri_debug"
                    android:checked="false"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_selector"
                    android:layout_width="350dp"
                    android:layout_height="35dp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="桌面样式及风格"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="150dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/launcher_classical"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />
                <RadioButton
                    android:id="@+id/setting_pri_lun_class"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="经典桌面"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/launcher_simple"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />
                <RadioButton
                    android:id="@+id/setting_pri_lun_simple"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="简约桌面"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="演示客户或打印LOGO"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/setting_pri_bank_list"
            android:layout_marginTop="20dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="0dp">
        <include
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            layout="@layout/setting_frag_bottom"/>
    </RelativeLayout>
</LinearLayout>