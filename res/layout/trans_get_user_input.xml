<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/user_input_msg"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:textColor="#48495F"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_weight="1"
        android:layout_height="0dp" />
    <EditText
        android:id="@+id/user_input_edit"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />
    <cn.desert.newpos.payui.master.keyboard.DesertKeybord
        android:id="@+id/user_input_keyboard"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:id="@+id/user_pay_style_ll"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_height="0dp">
        <include
            layout="@layout/trans_pay_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>