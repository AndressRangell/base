<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/printing_layout"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/printer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="@string/printer_paper"
        android:textColor="#009944"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_below="@+id/printer_title"
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/printer_cancel"
            android:background="@drawable/btn_red_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="取消"/>
        <View
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/printer_confirm"
            android:background="@drawable/btn_blue_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="确认"/>
    </LinearLayout>
</RelativeLayout>