<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/result_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/result_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/result_details"
        android:text="@string/app_name"
        android:layout_below="@+id/result_img"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/result_confirm"
        android:layout_width="match_parent"
        android:layout_below="@+id/result_details"
        android:text="@string/confirm"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="@drawable/btn_result_confirm_bg"
        android:layout_height="60dp" />
</RelativeLayout>